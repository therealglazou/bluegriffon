install::
	$(SYSINSTALL) $(IFLAGS1) $(_FILES) $(DESTDIR)$(mozappdir)/res
	mkdir -p $(DESTDIR)$(mozappdir)/res/resources/cm2
	$(INSTALL) $(_CM2_RESOURCE_FILES) $(DESTDIR)$(mozappdir)/res/resources/cm2

